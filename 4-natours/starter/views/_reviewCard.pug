mixin reviewCard(review)
    .reviews__card
        .reviews__avatar
            img.reviews__avatar-img(src=`/img/users/${review.user.photo}`, alt=review.user.name)
            h6.reviews__user= review.user.name
        p.reviews__text=review.review
        .reviews__rating
            each start in [1, 2, 3, 4, 5]
                -const startClass = `${review.rating >= start ? 'reviews__star--active' : 'reviews__star--inactive'}`;
                svg.reviews__star(class = startClass)
                    use(xlink:href='/img/icons.svg#icon-star', class=start1Class)
